{
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://coderxyz.onrender.com/api/**" 
      },
      {
        "source": "**",
        "destination": "/index.html"  
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
